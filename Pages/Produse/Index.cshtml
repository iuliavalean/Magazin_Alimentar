@page
@model Magazin_Alimentar.Pages.Produse.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th colspan="1">
            <a asp-page ="Produse/Index" asp-route-sortOrder =" @Model.NumeSort">
                @Html.DisplayNameFor(model => model.Produs[0].Nume)
            </a>
            </th>
            <th colspan ="1">
            <a asp-page ="./Index" asp-route-sortOrder =" @Model.ProducatorSort">
                @Html.DisplayNameFor(model => model.Produs[0].Producator.ProducatorName)
            </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Cantitate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].DataExpirare)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producator.ProducatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantitate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataExpirare )
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
